<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/baselayoutfragmentaccount"
    tools:context=".Fragments.AccountsFragment">


    <LinearLayout
        android:id="@+id/notloggedIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="149dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_large"
            android:text="@string/login"
            android:textSize="@dimen/font_large"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_large"
            android:text="@string/enternumber"
            android:textSize="@dimen/font_verysmall" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_large"
            android:text="@string/phonenumber"
            android:textSize="@dimen/font_medium"
            android:textStyle="bold"
            android:textColor="@color/black"/>


        <EditText
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_medium"
            android:background="@drawable/edittext_border"
            android:id="@+id/phonenumber"
            android:inputType="number"
            />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_verylarge"
            android:layout_marginTop="@dimen/margin_large"
            android:text="@string/enterphonenumber"
            android:background="@color/colorPrimary"
            android:textColor="@color/grey_light"
            android:id="@+id/enteredphonenumberbutton"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/loggedIn"
        android:visibility="gone">

    </RelativeLayout>


</RelativeLayout>